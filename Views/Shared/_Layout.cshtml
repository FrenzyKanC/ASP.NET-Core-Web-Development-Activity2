<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.NET_Core_Web_Development_Activity2</title>
    <!--applied and changeable bootstrap links: bootswatch.com-->
    <!--alternativen zu bootstrap: foundation, materialize, pure.css-->
    <!--Unter Umständen muss Page mit shift+refresh resettet werden um veränderungen anzuzeigen-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!--Das letzte File überschreibt alle anderen möglichen doppelten css also in diesem fall: eigener code über boostrap css-->
    <link rel="stylesheet" href="~/ASP.NET_Core_Web_Development_Activity2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
    @Html.Partial("_navbar.cshtml");
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ASP.NET_Core_Web_Development_Activity2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!--bootstrap brauch jquery um zu laufen-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--animationen + model dialogue-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!--platz für eigenes js-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--zu finden unter wwwwroot/js-->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
